# Test Environment Configuration
NODE_ENV=test

# Database Configuration (Test Database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=highpay_test
DB_USER=postgres
DB_PASSWORD=your_test_password
DB_SSL=false

# JWT Configuration
JWT_SECRET=test_jwt_secret_key_very_long_and_secure
JWT_REFRESH_SECRET=test_jwt_refresh_secret_key_very_long_and_secure
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Server Configuration
PORT=3001
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (Use ethereal for testing)
EMAIL_SERVICE=test
EMAIL_FROM="HighPay Test <test@highpay.com>"

# Firebase Configuration (Leave empty for testing)
FIREBASE_SERVICE_ACCOUNT_KEY=
FIREBASE_DATABASE_URL=

# Logging Configuration
LOG_LEVEL=error
LOG_FILE=false

# Rate Limiting (More permissive for testing)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000
